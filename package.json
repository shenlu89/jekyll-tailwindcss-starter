{
  "name": "jekyll-tailwindcss-starter",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:shenlu89/jekyll-tailwindcss-starter.git",
  "author": "Shenlu",
  "email": "shenlu89 <shenlu89dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "jekyll:dev": "bundle exec jekyll serve --incremental --watch",
    "jekyll:build": "JEKYLL_ENV=production bundle exec jekyll build",
    "css:dev": "npx tailwindcss -o assets/css/main.css --watch",
    "css:build": "NODE_ENV=production npx tailwindcss -o assets/css/main.css --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.2",
    "postcss": "^8.3.6",
    "tailwindcss": "^2.2.7"
  }
}
